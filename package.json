{
  "name": "autoapproval",
  "version": "1.0.0",
  "description": "The bot for approving pull requests automatically",
  "author": "Dmytro Khmelenko <d.khmelenko@gmail.com> (dkhmelenko.github.io)",
  "license": "ISC",
  "repository": "https://github.com//autoapproval.git",
  "homepage": "https://github.com//autoapproval",
  "bugs": "https://github.com//autoapproval/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest --coverage && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "heroku-postbuild": "echo Skip build on Heroku"
  },
  "dependencies": {
    "@types/nock": "^11.1.0",
    "btoa": "^1.2.1",
    "nock": "^11.7.0",
    "probot": "^7.5.3",
    "probot-config": "^1.1.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^10.17.4",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "smee-client": "^1.1.0",
    "standard": "^14.3.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.2.1",
    "typescript-eslint-parser": "^22.0.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ],
    "ignore": [
      "/lib/*"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "heroku-run-build-script": true
}
